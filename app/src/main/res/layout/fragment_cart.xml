<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.unicom.wasalakclientproduct.utils.Resource"/>

        <variable
            name="adapter"
            type="com.unicom.wasalakclientproduct.ui.cart.ProductCartAdapter" />

        <variable
            name="cartViewModel"
            type="com.unicom.wasalakclientproduct.ui.cart.CartViewModel" />

        <variable
            name="fragment"
            type="com.unicom.wasalakclientproduct.ui.cart.CartFragment" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:liftOnScroll="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/edit_profile_toolbar"
                style="@style/MyToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dimen_40dp"
                app:titleTextColor="@color/black">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo_semibold"
                        android:text="@string/cart"
                        android:textColor="#003312"
                        android:textSize="@dimen/dimen_20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/delete_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/dimen_16dp"
                        android:text="@string/empty_cart"
                        android:onClick="@{()->fragment.observeCartClearResponse()}"
                        android:fontFamily="@font/cairo_semibold"
                        android:visibility="@{cartViewModel.cartResponseLiveData.status == Resource.Status.SUCCESS?  View.VISIBLE :View.GONE}"
                        android:textColor="#E02020"
                        android:textSize="@dimen/dimen_14sp"
                        app:layout_constraintTop_toTopOf="parent"
                        />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.MaterialToolbar>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.1dp"
                android:layout_gravity="bottom"
                android:background="@color/whitesmoke" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint"
                android:layout_width="match_parent"
                android:layout_height='match_parent'>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/branch_constraint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_rect_shape_light_green_bg"
                    android:paddingBottom="@dimen/dimen_16dp"
                    android:visibility="@{cartViewModel.cartResponseLiveData.status == Resource.Status.SUCCESS?  View.VISIBLE :View.GONE}"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/start_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="@dimen/dimen_16dp" />

                    <FrameLayout
                        android:id="@+id/imageView3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/ic_rounded_corner_grey"
                        android:elevation="@dimen/dimen_4dp"
                        android:padding="@dimen/dimen_3dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/start_guide"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/dimen_30dp"
                            android:layout_height="@dimen/dimen_30dp"
                            app:cardCornerRadius="@dimen/dimen_6dp"
                            app:layout_constraintStart_toStartOf="@+id/start_guide"
                            app:layout_constraintTop_toTopOf="@+id/top_guide">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:loadBranchLogo="@{cartViewModel.cartResponseLiveData.data.result.branchLogo}"
                                app:layout_constraintStart_toStartOf="@+id/start_guide"
                                app:layout_constraintTop_toTopOf="@+id/top_guide" />
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/branch_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_12dp"
                        android:fontFamily="@font/cairo_bold"
                        android:textColor="#137C7C"
                        android:text="@{cartViewModel.cartResponseLiveData.data.result.branchName}"
                        android:textSize="@dimen/dimen_16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        app:layout_constraintTop_toTopOf="@+id/imageView3" />


                    <TextView
                        android:id="@+id/btn_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/cairo_regular"
                        android:paddingStart="@dimen/dimen_16dp"
                        android:paddingTop="@dimen/dimen_4dp"
                        android:paddingEnd="@dimen/dimen_16dp"
                        android:paddingBottom="@dimen/dimen_4dp"
                        android:text="@{@string/products(cartViewModel.cartResponseLiveData.data.result.totalProduct)}"
                        android:textAllCaps="false"
                        android:textColor="#437B7B"
                        android:textSize="@dimen/dimen_12sp"
                        app:cornerRadius="@dimen/dimen_20dp"
                        app:layout_constraintEnd_toStartOf="@+id/end_guide"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/end_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="@dimen/dimen_16dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <FrameLayout
                    android:id="@+id/progress_bar_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{cartViewModel.cartResponseLiveData.status == Resource.Status.LOADING?  View.VISIBLE :View.GONE}"
                    app:layout_constraintTop_toTopOf="parent">

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="?android:progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-6dp"
                        android:indeterminate="true" />
                </FrameLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cartRecycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adapter="@{adapter}"
                    android:visibility="@{cartViewModel.cartResponseLiveData.status == Resource.Status.SUCCESS?  View.VISIBLE :View.GONE}"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/branch_constraint" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/price_constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#1A00D44A"
                    android:paddingBottom="@dimen/dimen_12dp"
                    android:visibility="@{cartViewModel.cartResponseLiveData.status == Resource.Status.SUCCESS?  View.VISIBLE :View.GONE}"
                    app:layout_constraintTop_toBottomOf="@id/cartRecycle"
                    tools:layout_editor_absoluteX="29dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/price_start_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="@dimen/dimen_16dp" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/price_end_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="@dimen/dimen_16dp" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/cairo_semibold"
                        android:text="@string/purchase_sections"
                        android:textColor="#7C7C7D"
                        android:textSize="@dimen/dimen_12sp"
                        app:layout_constraintStart_toStartOf="@+id/price_start_guide"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="@string/purchase_sections" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:backgroundTint="@color/deepSkyBlue"
                        android:fontFamily="@font/cairo_bold"
                        android:paddingStart="@dimen/dimen_16dp"
                        android:paddingEnd="@dimen/dimen_16dp"
                        android:text="@string/apply_discount"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_12sp"
                        android:textStyle="bold"
                        app:cornerRadius="@dimen/dimen_22dp"
                        app:layout_constraintBottom_toBottomOf="@id/txt_layout_discount"
                        app:layout_constraintEnd_toStartOf="@id/price_end_guide"
                        app:layout_constraintStart_toEndOf="@id/txt_layout_discount"
                        app:layout_constraintTop_toTopOf="@id/txt_layout_discount" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:background="#4A3C3C43"
                        app:layout_constraintTop_toBottomOf="@id/button2" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_layout_discount"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:theme="@style/TextLabel"
                        app:boxCornerRadiusBottomEnd="@dimen/dimen_6dp"
                        app:boxCornerRadiusBottomStart="@dimen/dimen_6dp"
                        app:boxCornerRadiusTopEnd="@dimen/dimen_6dp"
                        app:boxCornerRadiusTopStart="@dimen/dimen_6dp"
                        app:boxStrokeColor="@color/colorAccent"
                        app:boxStrokeWidth="@dimen/dimen_0.5dp"
                        app:boxStrokeWidthFocused="@dimen/dimen_1dp"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/gray"
                        app:hintEnabled="false"
                        app:layout_constraintStart_toEndOf="@+id/price_start_guide"
                        app:layout_constraintTop_toBottomOf="@+id/textView22"
                        app:layout_constraintWidth_percent="0.55">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_discount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:fontFamily="@font/cairo_regular"
                            android:hint="@string/discount_code"
                            android:inputType="textEmailAddress"
                            android:paddingStart="@dimen/dimen_16dp"
                            android:paddingTop="@dimen/dimen_8dp"
                            android:paddingEnd="@dimen/dimen_16dp"
                            android:paddingBottom="@dimen/dimen_8dp"
                            android:singleLine="true"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorAccent"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/dimen_16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/cairo_regular"
                        android:text="@{@string/seperate_total(cartViewModel.cartResponseLiveData.data.result.totalProduct)}"
                        android:textColor="@color/colorSecondaryText2"
                        android:textSize="@dimen/dimen_14sp"
                        app:layout_constraintStart_toStartOf="@+id/price_start_guide"
                        app:layout_constraintTop_toBottomOf="@+id/view2" />

                    <TextView
                        android:id="@+id/total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo_semibold"
                        android:text="@{@string/discount_placeholder(cartViewModel.cartResponseLiveData.data.result.totalPrice)}"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/textView23"
                        app:layout_constraintEnd_toStartOf="@+id/price_end_guide"
                        app:layout_constraintTop_toTopOf="@+id/textView23" />

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo_regular"
                        android:text="توصيل إلى"
                        android:textColor="@color/colorSecondaryText2"
                        android:textSize="@dimen/dimen_14sp"
                        app:layout_constraintStart_toStartOf="@+id/price_start_guide"
                        app:layout_constraintTop_toTopOf="@+id/my_spinner_which_isnt_a_spinner"
                        app:layout_constraintBottom_toBottomOf="@+id/my_spinner_which_isnt_a_spinner" />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo_semibold"
                        android:text="100 د.ع"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/textView25"
                        app:layout_constraintEnd_toStartOf="@+id/price_end_guide"
                        app:layout_constraintTop_toTopOf="@+id/textView25" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/my_spinner_which_isnt_a_spinner"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:endIconDrawable="@drawable/ic_down"
                        android:background="@color/white"
                        android:theme="@style/TextLabel"
                        app:boxCornerRadiusBottomEnd="@dimen/dimen_6dp"
                        app:boxCornerRadiusBottomStart="0dp"
                        app:boxCornerRadiusTopEnd="@dimen/dimen_6dp"
                        app:boxCornerRadiusTopStart="0dp"
                        app:boxStrokeColor="@color/colorAccent"
                        app:boxStrokeWidth="@dimen/dimen_0.5dp"
                        app:boxStrokeWidthFocused="@dimen/dimen_1dp"
                        app:endIconMode="dropdown_menu"
                        app:endIconTint="@color/gray"
                        app:hintEnabled="false"
                        app:layout_constraintTop_toBottomOf="@+id/textView23"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        app:layout_constraintStart_toEndOf="@+id/textView25"
                       >

                        <AutoCompleteTextView
                            android:id="@+id/my_spinner_dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:fontFamily="@font/cairo_bold"
                            android:hint="Choose Address"
                            android:paddingTop="@dimen/dimen_8dp"
                            android:paddingBottom="@dimen/dimen_8dp"
                            android:singleLine="true"
                            android:inputType="none"
                            android:textColorHint="@color/gray"
                            android:textColor="#80000000"
                            android:textSize="@dimen/dimen_12sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:fontFamily="@font/cairo_bold"

                        android:text="المجموع (متضمن الضرائب)"
                        android:textColor="@color/colorSecondaryText2"
                        android:textSize="@dimen/dimen_14sp"
                        app:layout_constraintStart_toStartOf="@+id/price_start_guide"
                        app:layout_constraintTop_toBottomOf="@+id/my_spinner_which_isnt_a_spinner" />

                    <TextView
                        android:id="@+id/total_with_fix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@{@string/discount_placeholder(cartViewModel.cartResponseLiveData.data.result.totalPrice+100)}"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/textView27"
                        app:layout_constraintEnd_toStartOf="@+id/price_end_guide"
                        app:layout_constraintTop_toTopOf="@+id/textView27" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cart_buy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/dimen_30dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/colorAccent"
                    android:visibility="@{cartViewModel.cartResponseLiveData.status == Resource.Status.SUCCESS?  View.VISIBLE :View.GONE}"
                    android:fontFamily="@font/cairo_bold"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingBottom="@dimen/dimen_8dp"
                    android:onClick="@{()-> fragment.onClickBuy(cartViewModel.cartResponseLiveData.data.result.addresses)}"
                    android:text="@{String.format(@string/distance_nfs , cartViewModel.cartResponseLiveData.data.result.totalProduct , cartViewModel.cartResponseLiveData.data.result.totalPrice)}"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_16sp"
                    app:cornerRadius="@dimen/dimen_20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/price_constraintLayout"
                    app:layout_constraintWidth_percent="0.9"
                    tools:text="شراء 4 منتجات بسعر 524.98 د.ع" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/no_cart_products"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="@{cartViewModel.cartResponseLiveData.status == Resource.Status.ERROR?  View.VISIBLE :View.GONE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.7">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:alpha="0.25"
                        android:backgroundTint="#000000"
                        app:srcCompat="@drawable/ic_cart_empty"
                        app:tint="#3C3C43" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:alpha="0.25"
                        android:fontFamily="@font/cairo_regular"
                        android:text="@string/no_products_in_cart"
                        android:backgroundTint="#000000"
                        android:textSize="@dimen/dimen_14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>