<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.unicom.wasalakclientproduct.utils.Resource"/>

        <variable
            name="adapter"
            type="com.unicom.wasalakclientproduct.ui.cartConfirm.CartProductsAdapter" />

        <variable
            name="cartViewModel"
            type="com.unicom.wasalakclientproduct.ui.cartConfirm.CartConfirmProductsViewModel" />

        <variable
            name="account"
            type="com.unicom.wasalakclientproduct.model.user.AccountModel.Result" />

        <variable
            name="fragment"
            type="com.unicom.wasalakclientproduct.ui.cartConfirm.CartConfirmProductsFragment" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:liftOnScroll="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/changePass_toolbar"
                style="@style/MyToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dimen_40dp"
                app:title="@string/buy_products"
                app:titleTextColor="@color/black" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8F8F8"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint"
                android:layout_width="match_parent"
                android:layout_height='match_parent'>
                <FrameLayout
                    android:id="@+id/progress_bar_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{cartViewModel.cartResponseLiveData.status == Resource.Status.LOADING?  View.VISIBLE :View.GONE}"
                    app:layout_constraintTop_toTopOf="parent">

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="?android:progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-6dp"
                        android:indeterminate="true" />
                </FrameLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/address_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_14dp"
                    android:fontFamily="@font/cairo_semibold"
                    android:text="@string/address_conect"
                    android:textColor="#7C7C7D"
                    android:textSize="@dimen/dimen_12sp"
                    app:layout_constraintBottom_toBottomOf="@id/change_address_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/change_address_btn" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/change_address_btn"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_marginEnd="@dimen/dimen_14dp"
                    app:rippleColor="@color/black"
                    android:onClick="@{()->fragment.onChangeAddress()}"
                    android:fontFamily="@font/cairo_bold"
                    android:text="@string/change_address"
                    android:textColor="#003312"
                    android:textSize="@dimen/dimen_12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/address_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_14dp"
                    app:layout_constraintTop_toBottomOf="@id/change_address_btn">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:fontFamily="@font/cairo_regular"
                            android:text="@{cartViewModel.cartResponseLiveData.data.result.address.name}"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_10sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_1dp"
                            android:fontFamily="@font/cairo_semibold"
                            android:text="@{account.firstName + ` ` + account.lastName}"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_16sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_1dp"
                            android:fontFamily="@font/cairo_regular"
                            android:text="@{cartViewModel.cartResponseLiveData.data.result.address.description}"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_14sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_1dp"
                            android:fontFamily="@font/cairo_regular"
                            android:text="@{fragment.preferenceUtils.lang.equalsIgnoreCase(`en`) ? account.country.name + ` , ` + account.city.name : account.country.nameAr + ` , ` + account.city.nameAr}"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_14sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_1dp"
                            android:drawableStart="@drawable/ic_baseline_check_circle_18"
                            android:drawablePadding="@dimen/dimen_8dp"
                            android:layoutDirection="ltr"
                            tools:text="+964 773 333 3762"
                            android:fontFamily="@font/cairo_regular"
                            android:text="@{account.phoneNumber}"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/dimen_10sp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/payment_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:fontFamily="@font/cairo_semibold"
                    android:text="@string/payment_method"
                    android:textColor="#7C7C7D"
                    android:textSize="@dimen/dimen_12sp"
                    app:layout_constraintStart_toStartOf="@id/address_txt"
                    app:layout_constraintTop_toBottomOf="@id/address_linear" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cash_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="@dimen/dimen_6dp"
                    app:layout_constraintEnd_toEndOf="@id/change_address_btn"
                    app:layout_constraintStart_toStartOf="@id/address_txt"
                    app:layout_constraintTop_toBottomOf="@id/payment_txt">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_16dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_1dp"
                                android:drawableEnd="@drawable/ic_baseline_add_shopping_cart_24"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="@string/pay_on_delivered"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_16sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_0.5dp"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:alpha="0.3"
                            android:background="#3C3C43" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_12dp"
                            android:layout_marginEnd="@dimen/dimen_30dp"
                            android:alpha="0.5"
                            android:fontFamily="@font/cairo_regular"
                            android:text="@string/pay_on_delivered_desc"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_12sp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </com.google.android.material.card.MaterialCardView>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/order_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:background="#1000D44A"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/cash_card">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_14dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_24dp"
                                android:fontFamily="@font/cairo_regular"
                                android:text="@string/order_preif"
                                android:textColor="#7C7C7D"
                                android:textSize="@dimen/dimen_12sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_26dp"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:fontFamily="@font/cairo_regular"
                                android:text="@{@string/seperate_total(cartViewModel.cartResponseLiveData.data.result.totalProduct)}"
                                android:textColor="#7C7C7D"
                                android:textSize="@dimen/dimen_14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_26dp"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:fontFamily="@font/cairo_regular"
                                android:text="@string/shipment_fees"
                                android:textColor="#7C7C7D"
                                android:textSize="@dimen/dimen_14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_26dp"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:fontFamily="@font/cairo_regular"
                                android:text="@string/fees_pay_on_deliver"
                                android:textColor="#7C7C7D"
                                android:textSize="@dimen/dimen_14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_26dp"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:fontFamily="@font/cairo_regular"
                                android:text="@string/dicount_amount"
                                android:textColor="#00D44A"
                                android:textSize="@dimen/dimen_14sp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_24dp"
                                android:fontFamily="@font/cairo_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_12sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_26dp"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="@{@string/discount_placeholder(cartViewModel.cartResponseLiveData.data.result.totalPrice)}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_26dp"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="100 د.ع"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_26dp"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="100 د.ع"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_26dp"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="10.96 د.ع"
                                android:textColor="#00D44A"
                                android:textSize="@dimen/dimen_14sp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_14dp"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:layout_marginEnd="@dimen/dimen_14dp"
                        android:background="@drawable/buy_code_bg"
                        android:drawableStart="@drawable/ic_baseline_card_giftcard_24"
                        android:drawablePadding="@dimen/dimen_6dp"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/purchase_code_txt"
                        android:textColor="#00D44A"
                        android:textSize="@dimen/dimen_12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0.5dp"
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:alpha="0.3"
                        android:background="#3C3C43" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_14dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_24dp"
                                android:fontFamily="@font/cairo_regular"
                                android:text="@string/total_with_taxes"
                                android:textColor="#7C7C7D"
                                android:textSize="@dimen/dimen_12sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_26dp"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:fontFamily="@font/cairo_bold"
                                android:text="@string/taxes_amount"
                                android:textColor="#7C7C7D"
                                android:textSize="@dimen/dimen_14sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_26dp"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="959.96 د.ع"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_26dp"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:fontFamily="@font/cairo_semibold"
                                android:text="959.96 د.ع"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_14sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/order_products_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:fontFamily="@font/cairo_semibold"
                    android:text="@string/preif_order_from_vendor"
                    android:textColor="#7C7C7D"
                    android:textSize="@dimen/dimen_12sp"
                    app:layout_constraintStart_toStartOf="@id/address_txt"
                    app:layout_constraintTop_toBottomOf="@id/order_linear" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/order_products_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:fontFamily="@font/cairo_semibold"
                    android:text="@{@string/products(cartViewModel.cartResponseLiveData.data.result.totalProduct)}"
                    android:textColor="#7C7C7D"
                    android:textSize="@dimen/dimen_12sp"
                    app:layout_constraintEnd_toEndOf="@id/change_address_btn"
                    app:layout_constraintTop_toBottomOf="@id/order_linear" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/confirm_cart_products_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:adapter="@{adapter}"
                    android:orientation="vertical"
                    android:background="@color/white"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toTopOf="@id/btn_confirm"
                    app:layout_constraintTop_toBottomOf="@id/order_products_count"
                    app:layout_constraintVertical_bias="0" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_30dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:backgroundTint="@color/colorAccent"
                    android:fontFamily="@font/cairo_bold"
                    android:text="@string/confirm_order"
                    android:onClick="@{()->fragment.onClickConfirmOrder()}"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_16sp"
                    app:cornerRadius="@dimen/dimen_20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintWidth_percent="0.9" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>