<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ratingseek_attr="http://schemas.android.com/apk/res-auto"
    xmlns:RatingbarWithText="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Product_detail.ProductRatingFragment">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="التقييم العام"
            app:layout_constraintStart_toStartOf="@+id/start_guide"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:textSize="@dimen/dimen_12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/cairo_regular" />

        <com.unicom.wasalakclientproduct.utils.RatingbarWithText
            android:id="@+id/rate1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/end_guide"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            RatingbarWithText:rateval="1" />

        <com.unicom.wasalakclientproduct.utils.RatingbarWithText
            android:id="@+id/rate2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/end_guide"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/rate1"
            RatingbarWithText:rateval="5" />

        <com.unicom.wasalakclientproduct.utils.RatingbarWithText
            android:id="@+id/rate3"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_20dp"
            app:layout_constraintEnd_toStartOf="@+id/end_guide"
            app:layout_constraintStart_toStartOf="@+id/rate2"
            app:layout_constraintTop_toBottomOf="@+id/rate2"
            RatingbarWithText:rateval="2" />

        <com.unicom.wasalakclientproduct.utils.RatingbarWithText
            android:id="@+id/rate4"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_20dp"
            app:layout_constraintEnd_toStartOf="@+id/end_guide"
            app:layout_constraintStart_toStartOf="@+id/rate5"
            app:layout_constraintTop_toBottomOf="@+id/rate5"
            RatingbarWithText:rateval="3" />

        <com.unicom.wasalakclientproduct.utils.RatingbarWithText
            android:id="@+id/rate5"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_20dp"
            app:layout_constraintEnd_toStartOf="@+id/end_guide"
            app:layout_constraintStart_toStartOf="@+id/rate3"
            app:layout_constraintTop_toBottomOf="@+id/rate3"
            app:rateval="4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/dimen_16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/dimen_16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:listitem="@layout/layout_comment_detail_list_row"
            app:layout_constraintEnd_toStartOf="@+id/end_guide"
            app:layout_constraintStart_toStartOf="@+id/start_guide"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            android:id="@+id/commentRecycle"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="4.5 / 5"
            android:textSize="20sp"
            android:textColor="#00D44A"
             android:fontFamily="@font/cairo_bold"
            android:padding="@dimen/dimen_8dp"
             app:layout_constraintStart_toStartOf="@+id/start_guide"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:numStars="5"
            android:rating="3.5"
            android:theme="@style/RatingBarSmallTheme"
            android:isIndicator="true"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/cairo_semibold"
            android:text="حسب 14 تقييم"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/ratingBar"
            app:layout_constraintStart_toStartOf="@+id/start_guide"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="تقييمات المشترين"
            app:layout_constraintStart_toStartOf="@+id/start_guide"
            app:layout_constraintTop_toBottomOf="@+id/rate4"

            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/cairo_regular"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>