<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="com.unicom.wasalakclientproduct.model.branch.Product" />

        <import
            type="com.unicom.wasalakclientproduct.utils.StringUtil" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_6dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cvProuctImage"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white_blue"
            app:cardCornerRadius="@dimen/dimen_8dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvOldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnShowDetails"
                    android:layout_alignStart="@+id/tvBrandName"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:layout_marginTop="@dimen/dimen_9dp"
                    android:layout_marginEnd="52dp"
                    android:fontFamily="@font/cairo_regular"
                    android:text="@{String.valueOf(product.price)}"
                    android:textColor="@color/text_discount"
                    android:textSize="@dimen/dimen_12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/tvProductName"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvProductName" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvLogo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_112dp"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_2dp"
                    app:cardCornerRadius="@dimen/dimen_8dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ivLogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_wasellak_logo_color" />

                    <FrameLayout
                        android:id="@+id/frRibbon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        app:layout_constraintBottom_toBottomOf="@+id/ivLogo"
                        app:layout_constraintEnd_toEndOf="@+id/ivLogo"
                        app:layout_constraintStart_toEndOf="@+id/ivLogo"
                        app:layout_constraintTop_toBottomOf="@+id/ivLogo">

                        <ImageView
                            android:id="@+id/ivRibbon"
                            android:layout_width="@dimen/dimen_52dp"
                            android:layout_height="@dimen/dimen_26dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_ribbon" />

                        <TextView
                            android:id="@+id/tvRibbonData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_2dp"
                            android:layout_marginEnd="@dimen/dimen_16dp"
                            android:fontFamily="@font/cairo_bold"
                            tools:text="-28%"
                            android:textColor="@color/searchBarPrimaryColor"
                            android:textSize="@dimen/dimen_12sp" />
                    </FrameLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnShowDetails"
                    android:layout_alignStart="@+id/tvBrandName"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:layout_marginEnd="8dp"
                    android:alpha="0.5"
                    android:fontFamily="@font/cairo_regular"
                    android:gravity="center"
                    android:text="@{product.name}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cvLogo" />

                <TextView
                    android:id="@+id/tvProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnShowDetails"
                    android:layout_alignStart="@+id/tvBrandName"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/cairo_bold"
                    android:text="@{String.valueOf(product.price)}"
                    android:textColor="@color/text_brand"
                    android:textSize="@dimen/dimen_16sp"
                    app:layout_constraintEnd_toEndOf="@+id/tvProductName"
                    app:layout_constraintTop_toBottomOf="@+id/tvProductName" />

                <ImageView
                    android:id="@+id/ivCart"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="30dp"
                    android:src="@drawable/ic_cart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvProductPrice" />

                <TextView
                    android:id="@+id/tvAddToCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnShowDetails"
                    android:layout_alignStart="@+id/tvBrandName"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/cairo_bold"
                    android:text="أضف للعربة"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ivCart"
                    app:layout_constraintTop_toTopOf="@+id/ivCart" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>