<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.unicom.wasalakclientproduct.model.VendorModel.Result" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_12dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_shape_light_green_bg"
            android:paddingBottom="@dimen/dimen_16dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/dimen_16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/end_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/dimen_16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/top_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="@dimen/dimen_18dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/bottom_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="@dimen/dimen_18dp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_3dp"
                android:elevation="@dimen/dimen_4dp"
                android:id="@+id/imageView3"
                app:layout_constraintStart_toStartOf="@+id/start_guide"
                app:layout_constraintTop_toTopOf="@+id/top_guide"
                android:background="@drawable/ic_rounded_corner_grey">

                <androidx.cardview.widget.CardView

                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    app:layout_constraintStart_toStartOf="@+id/start_guide"
                    app:layout_constraintTop_toTopOf="@+id/top_guide"
                    app:cardCornerRadius="@dimen/dimen_6dp"

                    >

                    <ImageView
                        android:id="@+id/ivImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="@+id/start_guide"
                        app:layout_constraintTop_toTopOf="@+id/top_guide"
                        android:src="@drawable/ic_wasellak_logo_color" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_round_rect_shape_grey"
                android:drawableStart="@drawable/ic_baseline_directions_bike_24"
                android:drawablePadding="@dimen/dimen_3dp"
                android:fontFamily="@font/cairo_regular"
                android:paddingStart="6dp"
                android:paddingTop="@dimen/dimen_4dp"
                android:paddingEnd="6dp"
                android:paddingBottom="4dp"
                android:text="@{@string/distance_placeholder(model.distance)}"
                android:textColor="#80000000"
                android:textSize="@dimen/dimen_10sp"
                app:layout_constraintEnd_toStartOf="@+id/end_guide"
                app:layout_constraintTop_toTopOf="@+id/top_guide" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:fontFamily="@font/cairo_bold"
                android:text="@{model.name}"
                android:textColor="#137C7C"
                android:textSize="@dimen/dimen_16sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/top_guide" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:numStars="5"
                android:rating="3.5"
                android:theme="@style/RatingBarSmallTheme"
                android:isIndicator="true"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
