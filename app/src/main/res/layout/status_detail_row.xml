<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvStatusTime"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_regular"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#40000000"
            android:textSize="@dimen/dimen_12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="04:00 م" />

        <TextView
            android:id="@+id/tvStatusDetail"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_6dp"
            android:fontFamily="@font/cairo_regular"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="@dimen/dimen_14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvStatusTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvStatusTime"
            app:layout_constraintTop_toTopOf="@+id/tvStatusTime"
            android:text="تم استلام الشحنة في مركز التوزيع" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>