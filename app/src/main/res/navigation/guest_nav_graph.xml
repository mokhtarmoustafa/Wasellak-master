<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/guest_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.unicom.wasalakclientproduct.ui.guest.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/animate_slide_in_left"
            app:exitAnim="@anim/animate_slide_left_exit"
            app:popExitAnim="@anim/animate_slide_left_exit"/>
        <action
            android:id="@+id/action_loginFragment_to_forgetFragment"
            app:destination="@id/forgetFragment"
            app:enterAnim="@anim/animate_slide_in_left"
            app:exitAnim="@anim/animate_slide_left_exit"
            app:popExitAnim="@anim/animate_slide_left_exit"/>
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.unicom.wasalakclientproduct.ui.guest.register.RegisterFragment"
        android:label="RegisterFragment" />

    <fragment
        android:id="@+id/forgetFragment"
        android:name="com.unicom.wasalakclientproduct.ui.guest.forget.ForgetPasswordFragment"
        android:label="ForgetFragment" >
        <action
            android:id="@+id/action_forgetFragment_to_resetFragment"
            app:destination="@id/resetFragment"
            app:enterAnim="@anim/animate_slide_in_left"
            app:exitAnim="@anim/animate_slide_left_exit"
            app:popExitAnim="@anim/animate_slide_left_exit"/>
    </fragment>
    <fragment
        android:id="@+id/resetFragment"
        android:name="com.unicom.wasalakclientproduct.ui.guest.reset.ResetFragment"
        android:label="ResetFragment" />
    <fragment
        android:id="@+id/vendorFinderFrgament"
        android:name="com.unicom.wasalakclientproduct.ui.vendor.VendorFinderFrgament"
        android:label="VendorFinderFrgament" />
    <fragment
        android:id="@+id/productVendorListFragment"
        android:name="com.unicom.wasalakclientproduct.ui.product_list.ProductVendorListFragment"
        android:label="ProductVendorListFragment" />
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.unicom.wasalakclientproduct.ui.productDetails.ProductDetailFragment"
        android:label="productDetailFragment"
        tools:layout="@layout/fragment_product_detail" />
</navigation>